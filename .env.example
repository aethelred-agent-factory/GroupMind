# GroupMind Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================
# Telegram Bot Configuration
# ============================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# ============================================================
# DeepSeek AI Configuration
# ============================================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_TIMEOUT_SECONDS=30
DEEPSEEK_MAX_RETRIES=3

# ============================================================
# Database Configuration
# ============================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/groupmind
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_ECHO=false

# ============================================================
# Redis Configuration
# ============================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_SOCKET_TIMEOUT=5
REDIS_NAMESPACE=groupmind

# ============================================================
# Logging Configuration
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/groupmind.log

# ============================================================
# Rate Limiting Configuration
# ============================================================
RATE_LIMIT_ENABLED=true
FREE_TIER_LIMIT=5
FREE_TIER_WINDOW=3600
PRO_TIER_LIMIT=30
PRO_TIER_WINDOW=3600
ENTERPRISE_TIER_LIMIT=200
ENTERPRISE_TIER_WINDOW=3600
GROUP_DAILY_LIMIT=50

# ============================================================
# Feature Flags
# ============================================================
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_PRIVACY_FILTERING=true

# ============================================================
# Summary Generation Configuration
# ============================================================
SUMMARY_MIN_MESSAGES=5
SUMMARY_MAX_MESSAGES=1000
SUMMARY_TIMEOUT_SECONDS=60
DEFAULT_SUMMARY_LANGUAGE=en

# ============================================================
# Privacy and Security Configuration
# ============================================================
ENABLE_PII_REMOVAL=true
ENCRYPT_SENSITIVE_DATA=false

# ============================================================
# Message Processing Configuration
# ============================================================
BATCH_SIZE=100
BATCH_TIMEOUT_SECONDS=300

# ============================================================
# Worker Configuration
# ============================================================
WORKER_CONCURRENCY=4
WORKER_TIMEOUT_SECONDS=300
WORKER_MAX_RETRIES=3

# ============================================================
# Docker Compose Defaults
# ============================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=groupmind

# ============================================================
# Environment
# ============================================================
ENVIRONMENT=development
DEBUG=false
